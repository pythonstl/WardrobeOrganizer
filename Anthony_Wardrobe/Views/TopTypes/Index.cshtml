@model IEnumerable<Anthony_Wardrobe.Models.TopType>

@{
    ViewBag.Title = "Index";
}

<div class="my-items-indices">

    <h2 class="etc-font text-center">ADD TOP TYPES</h2>

    <h4 class="etc-font text-center">
        @Html.ActionLink("Create New", "Create", null, new { style = "color:white" })
    </h4>

    @*CREATE A RESPONSIVE GRID WITH ITEM DETAILS.*@
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 gallery-padding">
                <div class="thumbnail">
                    <div class="caption text-center">
                        <h3>@Html.DisplayFor(modelItem => item.TopType1)</h3>
                        <p>@Html.ActionLink("Details", "Details", new { id = item.TopID }, new { role = "button", @class = "btn btn-primary" })</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




